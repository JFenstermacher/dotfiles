alias n='nvim'
alias nf='VAL=$(fzf); [ ! -z $VAL ] && nvim $VAL'
alias nz='nvim $ZDOTDIR/.zshrc'
alias sz='source $ZDOTDIR/.zshrc'

if command -v bat &>/dev/null; then
  alias cat="bat -pp"
fi

alias awsps="export AWS_PROFILE=\$( perl -n -e'/\[profile (.*)\]/ && print \"\$1\n\"' $HOME/.aws/config | fzf )"
alias awswhoami='aws sts get-caller-identity'

alias tf="terraform"

alias nslookup='dig +short'

# Git Aliases

alias g="git"
alias gc="git-clone"
alias grd="cd $(git rev-parse --show-toplevel 2>&1 || echo ".")"
alias gs="git branch -l | fzf | xargs git co"
alias gfs="git ls-files -m -o --exclude-standard | fzf --print0 -m | xargs -0 -t -o git add"

# Git Worktree stuffs
alias gwta="git-worktree-add"
alias gwtr="git-worktree-remove"

# CD aliases
alias cda="cd $HOME/.aws"
alias cdw="cd $HOME/workspaces"

# Terramate
alias tm="terramate"
alias tmg="terramate generate"
alias tmsr="terramate script run"

# Kubernetes
alias k="kubectl"
alias kcs="cat $HOME/.kube/config | yq '.contexts[].name' | fzf | xargs -I {} yq e '.current-context = \"{}\"' -i $HOME/.kube/config"

# Mise
alias m="mise"
alias mr="mise run"

# TMUX
alias ts="sessionizer"
